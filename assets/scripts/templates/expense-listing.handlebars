{{#each expenses as |expense|}}
{{#everyOther @index 2}}
    <section class="row list-color-1" data-id="{{expense.id}}">
{{else}}
    <section class="row list-color-2" data-id="{{expense.id}}">
{{/everyOther}}
      <div class="col-12">{{limit expense.description 30}}</div>
      <div class="col-7">
        <div class="col-12">{{expense.transaction_date}}</div>
      </div>
      <div class="col-5">{{expense.amount}}  {{expense.currency}}</div>
      <div class="command-buttons">
      <button type="button" class="btn btn-outline-secondary edit-transaction" data-toggle="modal" data-target="#transaction-modal" data-backdrop="static" data-keyboard="false">
        Edit
      </button>
      <button type="button" class="btn btn-outline-secondary delete-transaction">Remove</button>
    </div>
    </section>

{{/each}}
